{
  "manifest_version": 3,
  "name": "SignalCheck",
  "version": "0.1.8",
  "description": "Assists critical reading by detecting contextual signals in online content. Does not determine truth or falsity.",

  "action": {
    "default_popup": "popup_v2.html",
    "default_title": "SignalCheck â€” contextual analysis"
  },

  "background": {
    "service_worker": "service_worker.js"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
