{
  "manifest_version": 3,
  "name": "SignalCheck",
  "version": "0.2.0",
  "description": "Enterprise contextual analysis engine. Detects structural trust and rhetorical manipulation signals. Does not determine truth or falsity.",

  "action": {
    "default_popup": "popup.html",
    "default_title": "SignalCheck â€” Enterprise Contextual Analysis"
  },

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://ge-signal-check-production.up.railway.app/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
